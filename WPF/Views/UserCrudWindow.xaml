<Window x:Class="WPF.Views.UserCrudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User management - ajUgostitelj" Height="550" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Manage users" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <ListBox x:Name="UserListBox" Width="550" Height="250" />

            <Button Content="Create User" Width="150" Height="40" Margin="0,10,0,0" Click="CreateUser_Click"/>
            <Button Content="Update User" Width="150" Height="40" Margin="0,10,0,0" Click="UpdateUser_Click"/>
            <Button Content="Delete User" Width="150" Height="40" Margin="0,10,0,0" Click="DeleteUser_Click"/>
        </StackPanel>
    </Grid>
</Window>