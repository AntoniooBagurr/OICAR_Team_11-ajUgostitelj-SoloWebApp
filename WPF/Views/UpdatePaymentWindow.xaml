<Window x:Class="WPF.Views.UpdatePaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment management - Update" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Update payment" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="Amount:" FontSize="14" />
            <TextBox x:Name="AmountTextBox" Width="250" Margin="0,5,0,10"/>

            <TextBlock Text="Method:" FontSize="14" />
            <TextBox x:Name="MethodTextBox" Width="250" Margin="0,5,0,10"/>

            <TextBlock Text="Payment date:" FontSize="14" />
            <TextBox x:Name="PaymentDateTextBox" Width="250" Margin="0,5,0,10"/>

            <Button Content="Update" Width="100" Height="40" Margin="0,10,0,0" Click="UpdatePayment_Click"/>
        </StackPanel>
    </Grid>
</Window>