<Window x:Class="WPF.Views.MainUiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Views"
        mc:Ignorable="d"
        Title="Home - AjUgostitelj" Height="400" Width="600">
    <Grid>
        <TextBlock x:Name="WelcomeMessage" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="0,20,0,0" />

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Profile details" Width="150" Height="40" Margin="10" Click="ProfileButton_Click" />
            <Button Content="Orders" Width="150" Height="40" Margin="10" Click="OrdersButton_Click" />
            
        </StackPanel>
        
        <Button x:Name="AdminPanelButton" Content="Admin Panel"
                Width="150" Height="40"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="10"
                Visibility="Collapsed" Click="AdminPanelButton_Click" />
    </Grid>
</Window>
