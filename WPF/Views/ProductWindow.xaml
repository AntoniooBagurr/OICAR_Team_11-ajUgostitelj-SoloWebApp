<Window x:Class="WPF.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upravljanje proizvodima"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Dodavanje novog proizvoda -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8"  >
            <TextBox x:Name="tbName" Width="120" VerticalContentAlignment="Center" 
                     Text="Naziv proizvoda" Foreground="Gray"
                     GotFocus="Tb_GotFocus" LostFocus="Tb_LostFocus"/>
            <TextBox x:Name="tbDesc" Width="200" VerticalContentAlignment="Center"
                     Text="Opis (opcionalno)" Foreground="Gray"
                     GotFocus="Tb_GotFocus" LostFocus="Tb_LostFocus"/>
            <TextBox x:Name="tbPrice" Width="80" VerticalContentAlignment="Center"
                     Text="Cijena" Foreground="Gray"
                     GotFocus="Tb_GotFocus" LostFocus="Tb_LostFocus"/>
            <TextBox x:Name="tbCatId" Width="80" VerticalContentAlignment="Center"
                     Text="Kategorija ID" Foreground="Gray"
                     GotFocus="Tb_GotFocus" LostFocus="Tb_LostFocus"/>
            <Button Content="Dodaj" Width="80" Click="BtnAdd_Click"/>
        </StackPanel>

        <!-- Tablica proizvoda -->
        <DataGrid x:Name="dgProducts" Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  RowHeight="30"
                  FontSize="14"
                  RowEditEnding="DgProducts_RowEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv"
                                    Binding="{Binding Name}"
                                    Width="2*"
                                    MinWidth="120"/>
                <DataGridTextColumn Header="Opis"
                                    Binding="{Binding Description}"
                                    Width="3*"
                                    MinWidth="150"/>
                <DataGridTextColumn Header="Cijena"
                                    Binding="{Binding Price, StringFormat=N2}"
                                    Width="*"
                                    MinWidth="80"/>
                <DataGridTextColumn Header="Kategorija"
                                    Binding="{Binding CategoryName}"
                                    Width="*"
                                    MinWidth="100"/>
                <DataGridTemplateColumn Header="Akcija" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Obriši"
                                    Click="BtnDelete_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Zatvori"
                Grid.Row="2"
                HorizontalAlignment="Right"
                Width="80"
                Margin="0,8,0,0"
                Click="BtnClose_Click"/>
    </Grid>
</Window>
