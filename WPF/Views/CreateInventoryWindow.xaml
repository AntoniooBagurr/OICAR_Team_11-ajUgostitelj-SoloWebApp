<Window x:Class="WPF.Views.CreateInventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Views"
        mc:Ignorable="d"
        Title="Inventory management - Create" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Add product to inventory" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Select Product:" FontSize="14"/>
            <ComboBox x:Name="ProductComboBox" Width="250" Margin="0,5,0,10"/>

            <TextBlock Text="Quantity:" FontSize="14"/>
            <TextBox x:Name="QuantityTextBox" Width="250" Margin="0,5,0,10"/>

            <Button Content="Add" Width="100" Height="40" Margin="0,10,0,0" Click="AddInventory_Click"/>
        </StackPanel>
    </Grid>
</Window>
