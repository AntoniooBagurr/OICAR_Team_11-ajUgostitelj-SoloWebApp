<Window x:Class="WPF.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Views"
        mc:Ignorable="d"
        Title="Profile - Password management" Height="300" Width="275">
    <StackPanel Margin="20" HorizontalAlignment="Left">
        <TextBlock Text="Change Password" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

        <TextBlock Text="Current Password:" FontSize="14" Margin="0,0,0,5" />
        <PasswordBox x:Name="CurrentPasswordBox" Width="200" Margin="0,0,0,10" />

        <TextBlock Text="New Password:" FontSize="14" Margin="0,0,0,5" />
        <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="0,0,0,10" />

        <Button Content="Submit" Width="100" Height="40" Margin="0,10,0,0" Click="SubmitChangePassword_Click" />
    </StackPanel>
</Window>
