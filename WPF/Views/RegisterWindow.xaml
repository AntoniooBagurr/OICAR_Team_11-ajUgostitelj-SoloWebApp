<Window x:Class="WPF.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Views"
        mc:Ignorable="d"
        Title="Register - ajUgostitelj" Height="450" Width="300">
    <Grid>
        <TextBlock Text="Username:" Margin="20,30,20,0" VerticalAlignment="Top" />
        <TextBox x:Name="UsernameTextBox" Margin="20,50,20,0" VerticalAlignment="Top" Height="25" />

        <TextBlock Text="Email:" Margin="20,90,20,0" VerticalAlignment="Top" />
        <TextBox x:Name="EmailTextBox" Margin="20,110,20,0" VerticalAlignment="Top" Height="25" />

        <TextBlock Text="Password:" Margin="20,150,20,0" VerticalAlignment="Top" />
        <PasswordBox x:Name="PasswordBox" Margin="20,170,20,0" VerticalAlignment="Top" Height="25" />

        <TextBlock Text="Confirm Password:" Margin="20,210,20,0" VerticalAlignment="Top" />
        <PasswordBox x:Name="ConfirmPasswordBox" Margin="20,230,20,0" VerticalAlignment="Top" Height="25" />

        <Button Content="Register" Margin="20,280,20,0" VerticalAlignment="Top" Height="30" Click="RegisterButton_Click" />
    </Grid>
</Window>
