@page
@model WebApp.Pages.Product.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<style>
    :root {
        --primary-color: #6F4E37;
        --secondary-color: #C4A484;
        --accent-color: #E5C3A6;
        --text-color: #333;
        --light-text: #f8f9fa;
        --dark-coffee: #5a3b2b;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        color: var(--text-color);
        background-color: #f5f5f5;
        line-height: 1.6;
    }

    .container-details {
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
    }

    .product-detail {
        display: flex;
        gap: 0;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        height: 550px;
    }

    .product-image {
        flex: 1;
        background-color: var(--secondary-color);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .product-info {
        flex: 1;
        padding: 40px;
        display: flex;
        flex-direction: column;
    }

    .item-name {
        font-size: 2.2rem;
        color: var(--primary-color);
        margin-bottom: 15px;
        font-weight: bold;
        position: relative;
        padding-bottom: 10px;
    }

        .item-name:after {
            content: "";
            display: block;
            width: 80px;
            height: 3px;
            background-color: var(--secondary-color);
            margin-top: 10px;
        }

    .item-description {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 25px;
        line-height: 1.7;
    }

    .item-price {
        font-size: 1.8rem;
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 30px;
    }

    .quantity-selector {
        margin-bottom: 30px;
    }

        .quantity-selector label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
            color: var(--primary-color);
        }

    .quantity-input {
        padding: 12px 15px;
        width: 100px;
        border: 2px solid var(--secondary-color);
        border-radius: 8px;
        font-size: 1rem;
        color: var(--primary-color);
        font-weight: bold;
    }

    .button-group {
        display: flex;
        gap: 20px;
        margin-top: auto;
    }

    .add-to-cart-btn {
        padding: 15px 30px;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
        font-size: 1.1rem;
        transition: all 0.3s;
        flex: 1;
        text-align: center;
    }

        .add-to-cart-btn:hover {
            background-color: var(--dark-coffee);
            transform: translateY(-2px);
        }

    .go-back-btn {
        padding: 15px 30px;
        background-color: white;
        color: var(--primary-color);
        border: 2px solid var(--secondary-color);
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
        font-size: 1.1rem;
        transition: all 0.3s;
        text-align: center;
        text-decoration: none;
        flex: 1;
    }

        .go-back-btn:hover {
            background-color: var(--accent-color);
            transform: translateY(-2px);
        }

    .footer {
        display: none;
    }


    @@media (max-width: 992px) {
        .product-detail {
            flex-direction: column;
        }

        .product-image {
            min-width: auto;
            padding: 20px;
        }

        .product-info {
            padding: 30px;
        }
    }

    @@media (max-width: 576px) {
        .button-group {
            flex-direction: column;
        }

        .add-to-cart-btn,
        .go-back-btn {
            width: 100%;
        }

        .container-details {
            padding: 10px;
        }
    }
</style>

<div class="container-details">
    <div class="product-detail">
        <div class="product-image">
            <img src="https://images.unsplash.com/photo-1517701550927-30cf4ba1dba5" alt="Espresso" class="item-image">
        </div>
        <div class="product-info">
            <h1 class="item-name">Espresso</h1>
            <p class="item-description">Strong, concentrated coffee served in a small cup. Perfect for those who appreciate the pure, intense flavor of freshly ground coffee beans. Our espresso is carefully crafted to deliver a rich crema and balanced taste.</p>
            <div class="item-price">2.50 €</div>

            <div class="quantity-selector">
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" min="1" value="1" class="quantity-input">
            </div>

            <div class="button-group">
                <button class="add-to-cart-btn" onclick="addToCart()">Add to Cart</button>
                <a href="/" class="go-back-btn">Go Back</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addToCart() {
            window.location.href = '/Cart';
        }
    </script>
}