@page
@model WebApp.Pages.Product.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}
<style>
    :root {
        --primary-color: #6F4E37;
        --secondary-color: #C4A484;
        --accent-color: #E5C3A6;
        --text-color: #333;
        --light-text: #f8f9fa;
        --dark-coffee: #5a3b2b;
    }

    .container-details {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 1rem;
    }

    .product-detail {
        display: flex;
        flex-direction: column;
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0,0,0,0.12);
    }

    .product-image {
        width: 100%;
        height: 300px;
        background-color: var(--secondary-color);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-image:hover img {
        transform: scale(1.03);
    }

    .product-info {
        padding: 2rem;
        display: flex;
        flex-direction: column;
    }

    .item-name {
        font-size: 1.8rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
        font-weight: 700;
        position: relative;
        padding-bottom: 0.5rem;
    }

    .item-name:after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background-color: var(--secondary-color);
        position: absolute;
        bottom: 0;
        left: 0;
    }

    .item-description {
        font-size: 1rem;
        color: #555;
        margin-bottom: 1.5rem;
        line-height: 1.7;
    }

    .item-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 2rem;
    }

    .quantity-selector {
        margin-bottom: 2rem;
    }

    .quantity-selector label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--primary-color);
    }

    .quantity-input {
        padding: 0.75rem 1rem;
        width: 80px;
        border: 2px solid var(--secondary-color);
        border-radius: 8px;
        font-size: 1rem;
        color: var(--primary-color);
        font-weight: 600;
        outline: none;
        transition: border-color 0.3s;
    }

    .quantity-input:focus {
        border-color: var(--primary-color);
    }

    .button-group {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: auto;
    }

    .add-to-cart-btn {
        padding: 1rem;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .add-to-cart-btn:hover {
        background-color: var(--dark-coffee);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .go-back-btn {
        padding: 1rem;
        background-color: white;
        color: var(--primary-color);
        border: 2px solid var(--secondary-color);
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s;
        text-align: center;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .go-back-btn:hover {
        background-color: var(--accent-color);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    @@media (min-width: 768px) {
        .product-detail {
            flex-direction: row;
            height: auto;
            min-height: 500px;
        }

        .product-image {
            flex: 1;
            height: auto;
            min-height: 500px;
        }

        .product-info {
            flex: 1;
            padding: 3rem;
        }

        .item-name {
            font-size: 2rem;
        }

        .button-group {
            flex-direction: row;
        }

        .add-to-cart-btn,
        .go-back-btn {
            flex: 1;
        }
    }

    @@media (min-width: 1200px) {
        .container-details {
            padding: 2rem;
        }

        .product-info {
            padding: 4rem;
        }

        .item-name {
            font-size: 2.2rem;
        }

        .item-description {
            font-size: 1.1rem;
        }
    }
</style>

<div class="container-details">
    <div class="product-detail">
        <div class="product-image">
            <img src="https://images.unsplash.com/photo-1517701550927-30cf4ba1dba5" alt="Espresso" class="item-image">
        </div>
        <div class="product-info">
            <h1 class="item-name">Espresso</h1>
            <p class="item-description">Strong, concentrated coffee served in a small cup. Perfect for those who appreciate the pure, intense flavor of freshly ground coffee beans. Our espresso is carefully crafted to deliver a rich crema and balanced taste.</p>
            <div class="item-price">2.50 €</div>

            <div class="quantity-selector">
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" min="1" value="1" class="quantity-input">
            </div>

            <div class="button-group">
                <button class="add-to-cart-btn" onclick="addToCart()">Add to Cart</button>
                <a href="/" class="go-back-btn">Go Back</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addToCart() {
            window.location.href = '/Cart';
        }
    </script>
}