@model List<WebApp.ViewModels.ProductCartViewModel>
@{
    ViewData["Title"] = "Your Shopping Cart";
}
<style>
    :root {
        --primary-color: #6F4E37;
        --secondary-color: #C4A484;
        --accent-color: #E5C3A6;
        --text-color: #333;
        --light-text: #f8f9fa;
        --dark-coffee: #5a3b2b;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .container-cart {
        max-width: 1100px;
        margin: 40px auto;
        padding: 30px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .cart-title {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 30px;
        text-align: center;
        border-bottom: 2px solid var(--secondary-color);
        padding-bottom: 10px;
    }

    .cart-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        margin-bottom: 15px;
        border-bottom: 1px solid #eee;
    }

    .item-info {
        flex: 1;
    }

    .item-name {
        font-weight: bold;
        color: var(--primary-color);
        font-size: 1.2rem;
    }

    .item-price, .item-qty, .item-subtotal {
        color: #555;
        font-size: 1rem;
    }

    .cart-summary {
        margin-top: 30px;
        text-align: right;
        background-color: var(--accent-color);
        padding: 20px;
        border-radius: 12px;
    }

    .total-price {
        font-size: 1.6rem;
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 10px;
    }

    .checkout-btn {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .checkout-btn:hover {
            background-color: var(--dark-coffee);
        }

    .continue-shopping {
        display: inline-block;
        margin-top: 10px;
        color: var(--primary-color);
        text-decoration: none;
        font-weight: bold;
    }

        .continue-shopping:hover {
            text-decoration: underline;
            color: var(--dark-coffee);
        }
</style>
<div class="container-cart">
    <h1 class="cart-title">Your Shopping Cart</h1>
    <div class="cart-items">
        @if (!Model.Any())
        {
            <p>Your cart is empty.</p>
        }
        else
        {
            decimal total = 0;
            foreach (var item in Model)
            {
                var subtotal = item.Price * item.Quantity;
                total += subtotal;
                <div class="cart-item">
                    <div class="item-info">
                        <div>
                            <div class="item-name">@item.Name</div>
                            <div class="item-price">@item.Price.ToString("F2") €</div>
                            <div class="item-qty">Qty: @item.Quantity</div>
                            <div class="item-subtotal">Subtotal: @subtotal.ToString("F2") €</div>
                        </div>
                    </div>
                </div>
            }
            <div class="cart-summary">
                <div class="total-price">Total: @total.ToString("F2") €</div>
                <button class="checkout-btn">Proceed to Checkout</button>
                <a href="@Url.Action("Index", "Product")" class="continue-shopping">Continue Shopping</a>
            </div>
        }
    </div>
</div>