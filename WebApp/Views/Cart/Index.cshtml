@model List<WebApp.ViewModels.ProductCartViewModel>
@{
    ViewData["Title"] = "Your Shopping Cart";
}
<style>
    :root {
        --primary-color: #6F4E37;
        --secondary-color: #C4A484;
        --accent-color: #E5C3A6;
        --text-color: #333;
        --light-text: #f8f9fa;
        --dark-coffee: #5a3b2b;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .container-cart {
        max-width: 1100px;
        margin: 40px auto;
        padding: 30px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .cart-title {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 30px;
        text-align: center;
        border-bottom: 2px solid var(--secondary-color);
        padding-bottom: 10px;
    }

    .cart-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        margin-bottom: 15px;
        border-bottom: 1px solid #eee;
    }

    .item-info {
        flex: 1;
    }

    .item-name {
        font-weight: bold;
        color: var(--primary-color);
        font-size: 1.2rem;
    }

    .item-price, .item-qty, .item-subtotal {
        color: #555;
        font-size: 1rem;
    }

    .remove-btn {
        background: none;
        border: none;
        color: #ff6b6b;
        cursor: pointer;
        font-size: 1.4rem;
        font-weight: bold;
    }

        .remove-btn:hover {
            color: #e63946;
        }

    .cart-summary {
        margin-top: 30px;
        text-align: right;
        background-color: var(--accent-color);
        padding: 20px;
        border-radius: 12px;
    }

    .total-price {
        font-size: 1.6rem;
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 10px;
    }

    .checkout-btn {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .checkout-btn:hover {
            background-color: var(--dark-coffee);
        }

    .continue-shopping {
        display: inline-block;
        margin-top: 10px;
        color: var(--primary-color);
        text-decoration: none;
        font-weight: bold;
    }

        .continue-shopping:hover {
            text-decoration: underline;
            color: var(--dark-coffee);
        }
</style>
<div class="container-cart">
    <h1 class="cart-title">Your Shopping Cart</h1>
    <div class="cart-items">
        @if (!Model.Any())
        {
            <p>Your cart is empty.</p>
        }
        else
        {
            decimal total = 0;
            foreach (var item in Model)
            {
                var subtotal = item.Price * item.Quantity;
                total += subtotal;
                <div class="cart-item">
                    <div class="item-info">
                        <div>
                            <div class="item-name">@item.Name</div>
                            <div class="item-price">@item.Price.ToString("F2") €</div>
                            <div class="item-qty">Količina: @item.Quantity</div>
                            <div class="item-subtotal">Cijena: @subtotal.ToString("F2") €</div>
                        </div>
                    </div>
                    <form asp-action="Remove" asp-controller="Cart" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="remove-btn">&times;</button>
                    </form>
                </div>
            }
            <div class="cart-summary">
                <div class="total-price">Total: @total.ToString("F2") €</div>
                <form asp-action="CheckoutFromClient" asp-controller="Cart" method="post">
                    <button type="button" class="checkout-btn" id="checkout">Proceed to Checkout</button>
                </form>
                <a href="@Url.Action("Index", "Product")" class="continue-shopping">Continue Shopping</a>
            </div>
        }
    </div>
</div>
    <script>
        console.log("Scripts section loaded.");
        document.addEventListener("DOMContentLoaded", () => {
            console.log("DOM ready");

            const checkoutBtn = document.getElementById("checkout");
            if (!checkoutBtn) {
                console.error("Checkout button not found.");
                return;
            }

            checkoutBtn.addEventListener("click", async () => {
                console.log("Checkout clicked");

                const cartRaw = localStorage.getItem("cart");
                if (!cartRaw) {
                    alert("Cart is empty.");
                    return;
                }

                const cart = JSON.parse(cartRaw);
                if (!cart.length) {
                    alert("Cart is empty.");
                    return;
                }

                try {
                    const response = await fetch("/Cart/CheckoutFromClient", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify(cart)
                    });

                    if (!response.ok) {
                        const errorText = await response.text();
                        throw new Error(errorText);
                    }

                    const result = await response.json();
                    localStorage.removeItem("cart");
                window.location.href = "/Status/Index";
                } catch (err) {
                    console.error("Error:", err);
                    alert("Order creation failed: " + err.message);
                }
            });
        });
    document.querySelectorAll(".remove-btn").forEach(btn => {
        btn.addEventListener("click", (e) => {
            e.preventDefault();
            const id = parseInt(btn.previousElementSibling.value); 
            let cart = JSON.parse(localStorage.getItem("cart") || "[]");
            cart = cart.filter(item => item.id !== id);
            localStorage.setItem("cart", JSON.stringify(cart));
            btn.closest(".cart-item").remove();

            if (!document.querySelectorAll(".cart-item").length) {
                document.querySelector(".cart-items").innerHTML = "<p>Your cart is empty.</p>";
            }
        });
    });
    const tempCart = @Html.Raw(Json.Serialize(Model));
    localStorage.setItem("cart", JSON.stringify(tempCart));
    </script>


