<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Naručivanje Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-coffee mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-coffee me-2"></i>
                    <span class="fw-bold">Naručivanje Online</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a href="/Product/Index" class="nav-link">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Cart/Index" class="nav-link">Your Cart</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Product/ProductReviews" class="nav-link">Reviews</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Status/Index" class="nav-link">Track your order</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-coffee text-light py-4 mt-5 footer">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center text-center text-md-start">
            <div class="mb-3 mb-md-0">
                <p class="mb-0">&copy; 2025 ajUgostitelj. Sva prava pridržana.</p>
            </div>
            <div class="footer-links d-flex flex-column flex-sm-row gap-2 gap-sm-4">
                <a href="/Html/AboutUs.html" class="text-light text-decoration-none">O nama</a>
                <a href="/Html/FAQ.html" class="text-light text-decoration-none">FAQ</a>
                <a href="/Html/Contact.html" class="text-light text-decoration-none">Kontakt</a>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
