@model WebApp.DTOs.OrderDto

@{
    ViewData["Title"] = "Order Status";
}
<link rel="stylesheet" href="~/css/Menu.css" />

<style>
    :root {
        --primary-color: #6F4E37;
        --secondary-color: #C4A484;
        --accent-color: #E5C3A6;
        --text-color: #333;
        --light-text: #f8f9fa;
        --dark-coffee: #5a3b2b;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
        color: var(--text-color);
    }

    .status-container {
        max-width: 700px;
        margin: 40px auto;
        padding: 30px;
        background-color: white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        position: relative;
    }

    .status-title {
        font-size: 2rem;
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 20px;
    }

    .status-section {
        margin-bottom: 15px;
    }

    .status-label {
        font-weight: bold;
        color: var(--dark-coffee);
    }

    .status-value {
        margin-left: 10px;
    }

    .order-items {
        margin-top: 20px;
        border-top: 1px solid #ccc;
        padding-top: 20px;
    }

    .order-item {
        margin-bottom: 10px;
    }

    .back-button {
        display: inline-block;
        margin-top: 25px;
        padding: 10px 20px;
        background-color: var(--primary-color);
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 600;
        transition: background-color 0.3s;
        border: none;
        cursor: pointer;
        font-size: 1rem;
    }

        .back-button:hover {
            background-color: var(--dark-coffee);
        }
</style>

<div class="status-container">
    @if (Model == null)
    {
        <div class="status-title">No Order Found</div>
        <p>There is no recent order to display.</p>
    }
    else
    {
        <div class="status-title">Order Status</div>

        <div class="status-section">
            <span class="status-label">Order ID:</span>
            <span class="status-value">ORD-@Model.Id</span>
        </div>

        <div class="status-section">
            <span class="status-label">Order Date:</span>
            <span class="status-value">@Model.OrderDate.ToLocalTime().ToString("g")</span>
        </div>

        <div class="status-section">
            <span class="status-label">Table:</span>
            <span class="status-value">@Model.TableId</span>
        </div>

        <div class="status-section">
            <span class="status-label">Total Amount:</span>
            <span class="status-value">@Model.TotalAmount.ToString("0.00") €</span>
        </div>

        <div class="status-section">
            <span class="status-label">Current Status:</span>
            <span class="status-value">@Model.Status</span>
        </div>

        <div class="order-items">
            <h3>Order Items</h3>
        </div>
    }

    <a href="@Url.Action("Index", "Product")" class="back-button">Back to Home</a>
</div>
